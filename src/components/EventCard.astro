---
// import LikeButton from "./LikeButton.astro";
import "../styles/global.css"
---

<article class="event-card" style={{backgroundImage: `url(/imgs/${Astro.props.img}.webp)`}}>
        <div class="top-info">
            <div class="categories">
            {Astro.props.categories.map((category) => (
                <a class="category" href={`program?category=${category}`}>{category}</a>
            ))}
            </div>
        </div>
        <h1>
            <a href={`/${Astro.props.slug}`} class="title">
            {Astro.props.name}
            </a>
        </h1>
            <p class="host">
            Hosted by {Astro.props.host}
            </p>
            <div class="event_info">
                <img src="/imgs/calendar_white.svg" alt="">
                <p>
                    {Astro.props.date}
                </p>
            </div>

            <div class="event_info">
                <img src="/imgs/pin_white.svg" alt="">
                <p>
                    <span>{Astro.props.start_time}</span>
                    <span> - </span>
                    <span>{Astro.props.end_time}</span>
                </p>
            </div>

</article>


<style>
  .event-card {
    width: 100%;
    min-width: 300px;
    aspect-ratio: 5/4;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    padding: 1rem;
    color: white;
    background-size: cover;
    box-shadow: inset 320px 0px 160px -120px rgba(15, 0, 5, 0.550), inset 0px 50px 85px -73px rgba(16, 16, 16, 0.7), inset 0px -60px 85px -61px rgba(0, 0, 0, 0.7);
    border-radius: 5px;
  }


  .top-info {
    display: flex;
    justify-content: flex-start;
    align-items: top;
  }
  
  .categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.8rem;
  }

  .category {
    background-color: #DFB1B6;
    padding: 0.35rem 0.8rem;
    border-radius: 200px;
    height: fit-content;
    color: #1d1d1d;
    justify-self: flex-start;
  }
  
  .title {
    font-size: 1.5rem;
    font-weight: normal;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-family: 'Inter', sans-serif;
  }

  .host {
    font-size: 1rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .info {
    display: flex;
    align-items: center;
  }

  .event_info {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
  }

  .event_info img {
    width: 1rem;
    height: 1rem;
  }

  .read-more {
    align-self: flex-end;
    font-weight: normal;
    cursor: pointer;
    margin: 0;
  }

  .like-button {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

</style>