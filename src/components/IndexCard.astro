<a href={Astro.props.link} style={{backgroundImage: `url(/imgs/${Astro.props.img})`}} class="card">
    <h2>
        {Astro.props.title}
    </h2>
</a>

<style>


    .card {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        aspect-ratio: 5/4;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        background: linear-gradient(0deg, rgba(79, 0, 47, 0.4), rgba(79, 0, 47, 0.4));
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        transition: 0.5s;
    }

    .card:hover {
        filter: brightness(1.2) saturate(1.1);
        transform: scale(1.02);
    }

    .card:hover h2 {
        transform: scale(1.04);
        filter: drop-shadow(0 0 1rem rgba(0, 0, 0, 0.617))
        font-weight: 200;
    }
    
    h2 {
        text-align: center;
        font-weight: bold;
        font-size: 2rem;
        transition: 0.5s;
    }

</style>